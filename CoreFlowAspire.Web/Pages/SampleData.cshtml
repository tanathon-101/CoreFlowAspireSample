@page
@model CoreFlowAspire.Web.Pages.SampleDataModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Sample Data";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-clipboard-data fs-2 me-2 text-primary"></i>
        <h2 class="mb-0">Sample Data</h2>
    </div>

<form method="post" class="mb-4">
    @Html.AntiForgeryToken()
    <div class="row g-2 align-items-end">
        <div class="col-auto">
            <label for="Name" class="form-label mb-0">Name</label>
            <input type="text" name="Name" id="Name" value="@Model.Name" class="form-control" placeholder="Enter name" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>



@if (Model.Items?.Any() == true)
{
        <div class="table-responsive shadow-sm">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Created At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
}
    
