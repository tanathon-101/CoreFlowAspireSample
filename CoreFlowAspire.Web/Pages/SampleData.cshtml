@page
@model CoreFlowAspire.Web.Pages.SampleDataModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Sample Data";
}

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-clipboard-data fs-2 me-2 text-primary"></i>
        <h2 class="mb-0">Sample Data</h2>
    </div>

<form method="post" asp-antiforgery="true" class="row g-3 mb-4">
    <div class="col-md-6">
        <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter name..." />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle-fill me-1"></i> Add
        </button>
    </div>
</form>
   

    @if (Model.Items != null && Model.Items.Any())
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Created At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No sample data found.
        </div>
    }
</div>
